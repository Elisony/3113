
.alert-box{
	width: 100%;
	height: 300px;
	background-color: rgba(0,0,0,.5);
	position: fixed;
	top: 0px;
	z-index: 20;
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: center;
}
.alert-info{
	width: 300px;
	height: 200px;
	background-color: #fff;
	border-radius: 5px;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}
.alert-info-title{
	font-size: 20px;
	color: #333;
	font-weight: 600;
}
.alert-info-content{
	font-size: 15px;
	color: #333;
	font-weight: 600;
	line-height: 40px;
}
.alert-info-button{
	width: 30%;
	height: 30px;
	background-color: #308bd1;
	color: #fff;
	text-align: center;
	line-height: 30px;
	border-radius: 1px;
	margin-top: 10px;
}

